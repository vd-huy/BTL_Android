<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    >


    <ImageView
        android:id="@+id/imageViewDiaDiem"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:scaleType="center"
        app:srcCompat="@drawable/anhsonghan" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/imageViewDiaDiem"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/TenDiaDiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sông Hàn và 4 cây cầu kỉ lục"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rate"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:rating="4.5"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/gps"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/DiaChiCuThe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàng Sa, Thọ Quang, Sơn Trà, Việt Nam, Đà Nẵng"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>